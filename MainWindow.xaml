<Window x:Class="WpfApp_Decrypt_RSA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Decrypt_RSA"
        mc:Ignorable="d"
        Title="Расшифровка RSA" Height="358" Width="800" FontSize="11" ResizeMode="NoResize">
	<Grid Height="346" VerticalAlignment="Top">
		<Label Content="Введите закрытый ключ( [d,n]):" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top" FontSize="12" FontWeight="Bold"/>
		<Label Content="Закрытый ключ:" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.085,0.274" FontSize="12" Width="107"/>
		<TextBox x:Name="textBox_PrivateKey_d" HorizontalAlignment="Left" Margin="117,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="73" FontSize="12" RenderTransformOrigin="0.754,0.469"/>
		<Label Content="," HorizontalAlignment="Left" Margin="190,88,0,0" VerticalAlignment="Top" Width="13" RenderTransformOrigin="0.731,2.572" FontSize="12" FontWeight="Bold"/>
		<TextBox x:Name="textBox_PrivateKey_n" HorizontalAlignment="Left" Margin="203,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="73" FontSize="12" RenderTransformOrigin="0.754,0.469"/>
		<Button x:Name="button_SelectFileForDecrypt" Content="Выбрать файл для дешифрования" HorizontalAlignment="Left" Margin="20,158,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.472,0.123" Height="30" Width="180" Click="button_SelectFileForDecrypt_Click"/>
		<TextBox x:Name="textBox_DecryptFileName" HorizontalAlignment="Left" Margin="20,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="271" Height="72" IsEnabled="False"/>
		<Button x:Name="button_DecryptFile" Content="Расшифровать выбранный файл" HorizontalAlignment="Left" Margin="20,270,0,0" VerticalAlignment="Top" Height="32" Width="180" Click="button_DecryptFile_Click"/>
		<Label Content="Процесс работы программы:" HorizontalAlignment="Left" Margin="345,24,0,0" VerticalAlignment="Top" FontSize="12"/>
		<TextBox x:Name="textBox_DecryptOutput" HorizontalAlignment="Left" Margin="354,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="421" Height="265" FontSize="12"/>
	</Grid>
</Window>
